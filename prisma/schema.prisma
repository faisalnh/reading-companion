// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enum for user roles
enum UserRole {
  STUDENT
  TEACHER
  LIBRARIAN
  ADMIN
}

// Core User model - handles authentication
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  image         String?
  role          UserRole  @default(STUDENT)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations based on role
  student   Student?
  teacher   Teacher?
  librarian Librarian?
  admin     Admin?

  // NextAuth fields
  accounts Account[]
  sessions Session[]

  @@index([email])
  @@index([role])
}

// NextAuth Account model
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

// NextAuth Session model
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// NextAuth VerificationToken model
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Student profile
model Student {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  grade     String?
  points    Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  books        StudentBook[]
  quizAttempts QuizAttempt[]
  achievements StudentAchievement[]
  classes      ClassStudent[]

  @@index([userId])
  @@index([points])
}

// Teacher profile
model Teacher {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  schoolId  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  classes Class[]

  @@index([userId])
  @@index([schoolId])
}

// Librarian profile
model Librarian {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  schoolId  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([schoolId])
}

// Admin profile
model Admin {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  schoolId  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([schoolId])
}

// Book model
model Book {
  id          String   @id @default(cuid())
  title       String
  author      String
  publisher   String?
  year        Int?
  isbn        String?  @unique
  description String?  @db.Text
  category    String?
  grade       String?
  pdfUrl      String
  coverUrl    String?
  pageCount   Int?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  students StudentBook[]
  quizzes  Quiz[]
  classes  ClassBook[]

  @@index([category])
  @@index([grade])
  @@index([author])
  @@index([title])
}

// Student reading progress for a book
model StudentBook {
  id          String    @id @default(cuid())
  studentId   String
  student     Student   @relation(fields: [studentId], references: [id], onDelete: Cascade)
  bookId      String
  book        Book      @relation(fields: [bookId], references: [id], onDelete: Cascade)
  currentPage Int       @default(0)
  completed   Boolean   @default(false)
  startedAt   DateTime  @default(now())
  completedAt DateTime?
  updatedAt   DateTime  @updatedAt

  @@unique([studentId, bookId])
  @@index([studentId])
  @@index([bookId])
  @@index([completed])
}

// Quiz model (AI-generated or manual)
model Quiz {
  id          String   @id @default(cuid())
  bookId      String
  book        Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)
  questions   Json // Array of {question, options, correctAnswer}
  generatedBy String? // "AI" or userId of creator
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  attempts QuizAttempt[]

  @@index([bookId])
}

// Student quiz attempts
model QuizAttempt {
  id          String   @id @default(cuid())
  studentId   String
  student     Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)
  quizId      String
  quiz        Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)
  answers     Json // Array of student answers
  score       Float // Percentage score
  completedAt DateTime @default(now())

  @@index([studentId])
  @@index([quizId])
  @@index([score])
}

// Achievement/Badge definitions
model Achievement {
  id          String   @id @default(cuid())
  name        String
  description String
  badgeUrl    String
  criteria    Json // {type: "books_read", count: 5} or {type: "quiz_score", score: 90}
  points      Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  students StudentAchievement[]

  @@index([name])
}

// Student achievements (earned badges)
model StudentAchievement {
  id            String      @id @default(cuid())
  studentId     String
  student       Student     @relation(fields: [studentId], references: [id], onDelete: Cascade)
  achievementId String
  achievement   Achievement @relation(fields: [achievementId], references: [id], onDelete: Cascade)
  earnedAt      DateTime    @default(now())

  @@unique([studentId, achievementId])
  @@index([studentId])
  @@index([achievementId])
}

// Classroom model
model Class {
  id        String   @id @default(cuid())
  teacherId String
  teacher   Teacher  @relation(fields: [teacherId], references: [id], onDelete: Cascade)
  name      String
  grade     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  students ClassStudent[]
  books    ClassBook[]

  @@index([teacherId])
  @@index([grade])
}

// Students in a class
model ClassStudent {
  id        String   @id @default(cuid())
  classId   String
  class     Class    @relation(fields: [classId], references: [id], onDelete: Cascade)
  studentId String
  student   Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)
  joinedAt  DateTime @default(now())

  @@unique([classId, studentId])
  @@index([classId])
  @@index([studentId])
}

// Books assigned to a class
model ClassBook {
  id         String    @id @default(cuid())
  classId    String
  class      Class     @relation(fields: [classId], references: [id], onDelete: Cascade)
  bookId     String
  book       Book      @relation(fields: [bookId], references: [id], onDelete: Cascade)
  assignedAt DateTime  @default(now())
  dueDate    DateTime?

  @@unique([classId, bookId])
  @@index([classId])
  @@index([bookId])
}
