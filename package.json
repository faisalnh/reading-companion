{
  "name": "reading-buddy",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "cd web && npm run dev",
    "build": "cd web && npm run build",
    "start": "cd web && npm run start",
    "lint": "cd web && npm run lint",
    "docker:up": "docker-compose up --build -d",
    "docker:up:github": "docker-compose -f docker-compose.github.yml up --build -d",
    "docker:deploy": "bash docker-deploy.sh",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart"
  },
  "description": "Reading Buddy - Hybrid Supabase + MinIO e-library for K-12 schools"
}
